<!DOCTYPE html>
<html>
	<head>
		<title>
			YelpCamp
		</title>
		<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="/stylesheets/custom.css">
	</head>
	<body>
		<!-- NAVBAR START -->
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="/">YelpCamp</a>
				</div>
				<div class="collapse navbar-collapse">
					<ul class="nav navbar-nav mr-auto">
						<li class="nav-item"><a class="nav-link" href="/">Home</a></li>
						<li class="nav-item"><a class="nav-link" href="/campgrounds">Campgrounds</a></li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<% if (!currentUser) { %>
							<li><a href="/login">Login</a></li>
							<li><a href="/register">Sign Up</a></li>
						<% }else { %>
						<li><p class="navbar-text">Signed in as <%= currentUser.username%></p></li>
							<li><a href="/logout">Logout</a></li>
						<% } %>
					</ul>
				</div>
			</div>
		</nav>
		<!-- END OF NAVBAR -->
		<!-- ALERT MESSAGE STARTS -->
		<% if (success && success.length > 0) { %> <!-- LOGGED IN -->
			<div class='container'>
				<div class='alert alert-success' role='alert'>
					<%= success %>
				</div>
			</div>
		<% } else if (error && error.length > 0) { %> <!-- NOT LOGGED IN -->
			<div class='container'>
				<div class='alert alert-danger' role='alert'>
					<%= error %>
				</div>
			</div>
		<% } %>
		