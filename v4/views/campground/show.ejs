<% include ../partials/header %>

<div class='container'>
	<div class='row'>
		<!-- Main body-->
		<div class='col-md-9'>
			<!-- Campground name, image and description -->
			<div class="thumbnail" id="full">
				<img class="img-responsive" src='<%= campground.image %>'>
				<div class="caption">
					<div class="row">
						<h4 class="col-md-6"><a href="#"><%= campground.name %></a></h4>
						<h4 class="col-md-6 text-right">$10.00/night</h4>
					</div>
					<p><%= campground.description %></p>
				</div>
			</div>
			<!-- Comments section -->
			<div class="well">
				<!-- add a review button -->
				<div class="text-right">
					<a class='btn btn-success' href='/campgrounds/<%= campground._id%>/comments/new'>Add a review</a>
				</div>
				<hr>
				<!-- displays all comments posted -->
				<!-- display comments -->
				<% campground.comments.forEach(function(comment) { %>
					<div class='row'>
						<div class='col-md-12'>
							<strong><%= comment.author %></strong>
							<span class="pull-right">10 days ago</span>
							<p>
								<%= comment.text %>
							</p>
						</div>
					</div>
				<% }); %>
				
			</div>
		</div>
		<!-- Right Sidebar -->
		<div class="col-md-3">
			<div class="list-group">
				<li class="list-group-item">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>