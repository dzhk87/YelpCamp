<% include ../partials/header %>

<div class='container'>
	<div class='row'>
		<h1 style='text-align:center'>Edit Comment</h1>
		<div style='width:30%; margin:30px auto'>
			<form action='/campgrounds/<%=campgroundId%>/comments/<%=comment._id%>/?_method=PUT' method='POST'>
				<div class='form-group'>
					<textarea class='form-control' name='comment[text]' rows='6' style='resize:none;'><%=comment.text%></textarea>
				</div>
				<div class='form-group'>
					<button class='btn btn-lg btn-default btn-block btn-primary'>Edit</button>
				</div>
			</form>
			<a href='javascript:history.back()'>Go Back</a>
		</div>
	</div>
	
</div>

<% include ../partials/footer %>